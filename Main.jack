                        do Screen.clearScreen();
                        do Game.ready(level, true, true, false);
                        let status = Game.run();
                        do Game.close();
                        do Screen.clearScreen();
                        let level = level + 1;
                    }
                    if (status = 1){
                            do Game.ready(4, false, false, false);
                            let status = Game.run();
                            do Game.close();
                            do Screen.clearScreen();
                    }
                    if (status = -1){
                            do Game.ready(5, false, false, false);
                            let status = Game.run();
                            do Game.close();
                            do Screen.clearScreen();
                    }
                }
            }
			if (input = 2){
				return;
			}
            if (input = 3){ //jizz
            }
        }
		return;
	}
