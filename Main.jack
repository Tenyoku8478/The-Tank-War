        let list[0] = "level 1";
        let list[1] = "level 2";
        let list[2] = "level 3";
        let level_menu = Menu.new(10, 25 , 3, list);
        while(true)
        {
			let status = 1;
            let input = main_menu.run();
			if ((input=0)|(input=1)){
                do Game.init();
				if (input = 0){let level = 1;}
