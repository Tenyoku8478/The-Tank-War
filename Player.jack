class Player
{
    field Tank tank;

    constructor Player new(Tank _tank)
    {
        let tank = _tank;
        return this;
    }

    method void play()
    {
        var int key;
        let key = Keyboard.keyPressed();
        if(key=131) { do tank.move(0); }
        else{if(key=132) { do tank.move(1); }
        else{if(key=133) { do tank.move(2); }
        else{if(key=130) { do tank.move(3); }}}}
        return;
    }
}
