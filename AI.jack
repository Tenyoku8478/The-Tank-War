class AI
{
    field Tank tank;
    field int now_dir;

    constructor AI new(Tank _tank, int _now_dir)
    {
        let tank = _tank;
        let now_dir = _now_dir;
        return this;
    }

    method void play()
    {
        if(~tank.move(now_dir)){ let now_dir = Rand.rand()&3;}
        return;
    }
}
