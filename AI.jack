class AI
{
    field Tank tank;
    field int now_dir;

    constructor AI new(Tank _tank)
    {
        let tank = _tank;
        let now_dir = Rand.rand();
        return this;
    }

    method void play()
    {
        if(~tank.move(now_dir)){ let now_dir = Rand.rand()&3;}
		if (Rand.rand()<17){
			do tank.shoot();
		}
        return;
    }
}
