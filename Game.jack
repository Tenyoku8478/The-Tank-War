class Game{
	static Map map;
	static List bullet_list, tank_list, AI_list;
	static Player player;
    static int status, enemy;

	function void init(){
		do Album.init();
		do Book.init();
        do Tank.init();
		do Bullet.init();
        do Rand.reset(71, 22);
        do Image.set_origin(12, 8);
		return;
	}
    function void ready(int level) {
		var AI ai;
        var Tank tank;
		let map = Book.get_map(level);
		let tank_list = map.get_tank_list();
		let bullet_list = List.new();
		let AI_list = List.new();
        let status = 0;
        let enemy = 0;
		do map.draw();
		do Tank.set_map(map);
		do Bullet.set_map(map);
		do tank_list.reset();
		while (~tank_list.end()){
			let tank = tank_list.get();
			if (tank.get_type() = 1){
				let player = Player.new(tank);
			}
			else{
                let enemy = enemy+1;
				let ai = AI.new(tank);
				do AI_list.insert(ai);
			}
			do tank_list.next();
		}
        return;
    }
	function void run(){
		var AI ai;
		var Bullet bullet;
        var int i;
		while(status=0){
            do player.play();
			do AI_list.reset();
			while (~AI_list.end()){
				let ai = AI_list.get();
				do ai.play();
				do AI_list.next();
			}
            let i = 0;
            while(i<2){
                do bullet_list.reset();
                while (~bullet_list.end()){
                    let bullet = bullet_list.get();
                    if (~bullet.move()){
                        do bullet_list.delete();
                    }
                    else {
                        do bullet_list.next();
                    }
                }
                let i = i+1;
            }
        }
        do Output.moveCursor(10, 22);
        if(status=1)
        {
            do Output.printString("win!");
        }
        else
        {
            do Output.printString("lose!");
        }
		return;
	}

	function void add_bullet(Bullet bullet){
		do bullet_list.insert(bullet);
		return;
	}
    function void attack_tank(int x, int y){
        var Tank tank;
        var int type;
        do tank_list.reset();
        while(~tank_list.end())
        {
            let tank = tank_list.get();
            let type = tank.attacked(x, y);
            if(type = 1){ let status = -1; }
            else{if(type = 2)
            {
                let enemy = enemy-1;
                if(enemy=0) { let status = 1; }
            }}
            do tank_list.next();
        }
        return;
    }
}
